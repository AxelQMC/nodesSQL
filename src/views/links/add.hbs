<div class="container px-4 py-4 ">
    <div class="row">
        <div class="col-4 mx-auto">
            <div class="card px-4 py-4">
                <div class="card-body"></div>
                <form action="/links/add" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title" autofocus required>
                </div>
                <div class="form-group pt-4">
                    <input type="url" name="url" class="form-control" placeholder="url" required>
                </div>
                <div class="form-group pt-4">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                </div>
                <div class="form-group d-grid gap-2 pt-4">
                    <button class="btn btn-success btn-primary">
                        Save
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>