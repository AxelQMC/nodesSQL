<div class="container px-4 py-4 ">
    <div class="row">
        <div class="col-4 mx-auto animate__animated animate__jackInTheBox">
            <div class="card px-4 py-4">
                <div class="card-body"></div>
                <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Title" autofocus required>
                </div>
                <div class="form-group pt-4">
                    <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="url" required>
                </div>
                <div class="form-group pt-4">
                    <textarea name="descripcion"  rows="2" class="form-control" placeholder="Description">{{link.descripcion}}</textarea>
                </div>
                <div class="form-group d-grid gap-2 pt-4">
                    <button class="btn btn-success btn-primary">
                        Save
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>